<h1><%= @project.title %></h1>
<hr>

<%= link_to 'Donate', new_project_donation_path(@project), class: 'btn btn-success' %>
<br>
<br>
<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Target:</strong>
  <%= @project.target %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @project.due_date.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Total received:</strong>
  <%= @project.total_received %>
</p>

<p>
  <strong>Donators:</strong>
  <%= @project.donators %>
</p>

<% if @project.user == current_user %>
  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Destroy', edit_project_path(@project), method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', projects_path %>

